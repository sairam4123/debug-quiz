// Prisma schema for Better Auth
// learn more: https://better-auth.com/docs/concepts/database

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

// NOTE: When using mysql or sqlserver, uncomment the //@db.Text annotations in model Account below
// Further reading:
// https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String

  @@index([name])
}

model User {
  id            String    @id
  name          String //@db.Text
  email         String
  emailVerified Boolean   @default(false)
  image         String? //@db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  posts         Post[]
  quizzes       Quiz[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String? //@db.Text
  userAgent String? //@db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String //@db.Text
  providerId            String //@db.Text
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String? //@db.Text
  refreshToken          String? //@db.Text
  idToken               String? //@db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String? //@db.Text
  password              String? //@db.Text
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String //@db.Text
  value      String //@db.Text
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

// --- Quiz App Models ---

model Quiz {
  id          String   @id @default(cuid())
  title       String
  description String?
  showIntermediateStats Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String

  questions Question[]
  sessions  GameSession[]

  @@map("quiz")
}

enum QuestionType {
  PROGRAM_OUTPUT
  CODE_CORRECTION
  KNOWLEDGE
}

model Question {
  id          String       @id @default(cuid())
  text        String
  type        QuestionType
  category    String?
  codeSnippet String? //@db.Text
  language    String       @default("python") // "python", "javascript", etc.
  timeLimit   Int          @default(10) // in seconds
  baseScore   Int          @default(1000) // max points for this question

  quiz   Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId String

  options Option[]
  answers Answer[]

  order        Int           @default(0)
  gameSessions GameSession[]

  @@index([quizId])
  @@map("question")
}

model Option {
  id        String  @id @default(cuid())
  text      String
  isCorrect Boolean @default(false)

  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String

  @@index([questionId])
  @@map("option")
}

enum GameStatus {
  WAITING
  ACTIVE
  INTERMISSION
  ENDED
}

enum GameMode {
  TOURNAMENT
  CLASSROOM
}

model GameSession {
  id        String     @id @default(cuid())
  code      String     @unique // 6-digit join code
  status    GameStatus @default(WAITING)
  mode      GameMode   @default(TOURNAMENT)
  highestQuestionOrder Int @default(0)
  startTime DateTime?
  endTime   DateTime?

  quiz   Quiz   @relation(fields: [quizId], references: [id])
  quizId String

  players Player[]

  currentQuestion   Question? @relation(fields: [currentQuestionId], references: [id])
  currentQuestionId String?
  currentQuestionStartTime DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([quizId])
  @@map("game_session")
}

model Player {
  id    String @id @default(cuid())
  name  String
  class String // E27 | E29 | E37A | E37B
  score Int    @default(0)

  session   GameSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId String

  answers Answer[]

  joinedAt   DateTime @default(now())
  lastActive DateTime @default(now())

  @@unique([sessionId, name]) // Unique name per session
  @@map("player")
}

model Answer {
  id String @id @default(cuid())

  player   Player @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId String

  question   Question @relation(fields: [questionId], references: [id])
  questionId String

  selectedOptionId String? // Null if timeout or text input? assuming multiple choice for now
  isCorrect        Boolean
  timeTaken        Int // in milliseconds (server-side calculated)
  score            Int     @default(0) // points earned for this answer

  createdAt DateTime @default(now())

  @@index([playerId])
  @@index([questionId])
  @@map("answer")
}
